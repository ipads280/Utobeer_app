<div class = "container">
  <div class= "row text-center">
    <div class = "col-md-12 mt-5">
      <h2>アルコール度数編集画面</h2>
      <p>商品のアルコール度数を編集できるページです</p>
    </div>
  </div>

  <!--ジャンル追加フォーム-->
  <div class ="row  d-flex justify-content-center">
    <div class="col-lg-8 mt-3 d-flex justify-content-center">
      <%= form_with model: @arc,url: admin_arc_path do |f| %>
        <label> <h5>アルコール度数</h5></label>
        <%= f.text_field :arcs_name %>
        <%= f.submit '変更!',class:"btn btn-success" %>
        <%= link_to "一覧", admin_arcs_path,class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div