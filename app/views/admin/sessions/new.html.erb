<div class="row">
  <div class="col-md-8 offset-md-2">
    <%= form_with model: @admin, url: admin_session_path do |f| %>
    <h1><i class="fa-solid fa-right-to-bracket"></i>ログイン</h1>
    <p>ログインはこちらのページから行ってください。新規登録がまだの方はこちら</p>
 </div>
</div>

<div class="row py-3">
  <div class="col-md-8 offset-md-2">
    <h3 class="mb-3">ログインフォーム</h3>
      <!--フォーム-->
      <form>
      <!--メールアドレス-->
      <div class="row py-3">
        <label class="col-md-4 col-form-label">
          <h4>メールアドレス</h4>
        </label>
        <div class="col-md-8">
          <div class="form-floating">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </div>
      </div>
      
      <div class="row py-3">
        <label class="col-md-4 col-form-label">
          <h4>パスワード</h4>
        </label>
        <div class="col-md-8">
          <div class="form-floating">
            <%= f.password_field :password, autocomplete: "current-password" %>
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
      <div class="row py-3">
        <label class="col-md-4 col-form-label">
          <h4></h4>
        </label>
        <div class="col-md-8">
          <div class="form-floating">
            <div class="actions">
              <%= f.submit "Log in" %>
              
            </div>
          </div>
        </div>
      </div>
      
      <div class="row py-3">
        <label class="col-md-4 col-form-label">
          <h4></h4>
        </label>
        <div class="col-md-8">
          <div class="form-floating">
            <div class="actions">
              <%= render "user/shared/links" %>
            </div>
          </div>
        </div>
      </div>
      </form>
  </div>
  <% end %>
</div>