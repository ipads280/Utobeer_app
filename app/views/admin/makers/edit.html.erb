<div class = "container">
  <div class= "row text-center">
    <div class = "col-md-12 mt-5">
      <h2>メーカー編集画面</h2>
      <p>商品のメーカーを編集できるページです</p>
    </div>
  </div>

  <!--ジャンル追加フォーム-->
  <div class ="row  d-flex justify-content-center">
    <div class="col-lg-8 mt-3 d-flex justify-content-center">
      <%= form_with model: @maker,url: admin_maker_path do |f| %>
        <label> <h5>メーカー名</h5></label>
        <%= f.text_field :makers_name %>
        <%= f.submit '変更!',class:"btn btn-success" %>
        <%= link_to "一覧", admin_makers_path,class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>